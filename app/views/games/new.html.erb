<h1>New Game</h1>
<h1 id="word"><%= @letters %></h1>
<div>
  <form class="form-inline" action="score" method="post">
  <p>What is the longest word you can find?</p>
  <input type="text" name="word">
  <input type="submit" value="Play">
  <p><%= hidden_field_tag :authenticity_token, form_authenticity_token %></p>
</form>
</div>
